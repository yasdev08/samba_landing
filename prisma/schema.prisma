generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


model Order {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  product    String
  name       String
  phone      String
  wilaya     String
  baladiya   String
  pointure   String
  createdAt  DateTime @default(now())
}

model PixelEvent {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  eventName   String
  eventTime   DateTime @default(now())
  userData    Json
  customData  Json?
  sent_to_meta Boolean @default(false)
  createdAt   DateTime @default(now())
}

